.ui-container
    position relative
    width 100%
    height 100%
    background black

.ui-panel
    background #2d2d2d
    position relative
    width 100%
    height: 100%

.ui-panel-content
    width: 100%
    height: 100%

.ui-panel-header
    position: absolute;
    left: 0
    right 0

.ui-panel-header-top
    top: 0
    border-bottom: 1px solid #424242

.ui-panel-header-bottom
    bottom: 0
    border-top: 1px solid #424242;


.ui-panel-body-top
    top: 0

.ui-panel-body-bottom
    bottom: 0

.ui-panel-body
    height: calc(100% - 34.28px);
    position: absolute;
    right: 0;
    left: 0;

.ui.dropdown .menu {
    cursor: auto;
    position: absolute;
    display: none;
    outline: 0;
    top: 100%;
    min-width: -webkit-max-content;
    min-width: -moz-max-content;
    min-width: max-content;
    margin: 0;
    padding: 0 0;
    background: #151515!important;
    font-size: 1em;
    text-shadow: none;
    text-align: left;
    box-shadow: 0 2px 3px 0 rgba(34,36,38,.15);
    border: 1px solid rgba(34,36,38,.15);
    border-radius: .28571429rem;
    -webkit-transition: opacity .1s ease;
    transition: opacity .1s ease;
    z-index: 9999;
    will-change: transform,opacity;
}
.ui.pointing.dropdown>.menu:after {
    display: block;
    position: absolute;
    pointer-events: none;
    content: '';
    visibility: visible;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    width: .5em;
    height: .5em;
    box-shadow: -1px -1px 0 1px rgba(34,36,38,.15);
    background: #151515!important;
    z-index: 2;
}
.ui.pointing.dropdown>.menu:after {
    top: -.25em;
    left: 8%;
    margin: 0 0 0 -.25em;
}

.panel-header-menu
    left: 0;
    min-width: calc(100% - 1px);
    border-radius: 0 0 .28571429rem .28571429rem;
    background: #1B1C1D;
    margin: 0;
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.08);
    -webkit-box-orient: vertical!important;
    -webkit-box-direction: normal!important;
    -webkit-flex-direction: column!important;
    -ms-flex-direction: column!important;
    flex-direction: column!important;

.panel-container
    width 100%
    height: 100%
    position relative

.resize-strip-top-right
    opacity 0.5
    width  15px
    height 15px
    position absolute
    top 0
    right 0
    cursor: crosshair
    background: url(../../img/resize_strip.png) no-repeat

.resize-strip-bottom-left
    opacity 0.5
    width  15px
    height 15px
    position absolute
    bottom 0
    left 0
    z-index: 9999
    cursor: crosshair
    background: url(../../img/resize_strip.png) no-repeat
    transform: rotate(180deg)


.ui-panel .ui.icon.button, .ui.icon.buttons .button {
    padding: .4rem;
    margin: 5px;
}


.ui-drag-handler-vertical {
    position: absolute;
    top: 0;
    left: -1.5px;
    width: 3px;
    bottom: 0;
    cursor: ew-resize;
    background: #1a1a1a;
    border-left: 1px solid #424242
    border-right: 1px solid #424242
    z-index:999
}

.ui-drag-handler-horizontal {
    position: absolute;
    right: 0;
    left: 0;
    height:3px;
    bottom: -1.5px;
    cursor: ns-resize;
    background: #1a1a1a;
    border-top: 1px solid #424242
    border-bottom: 1px solid #424242
    z-index:999
}

.ui.tabular.buttons .button.item {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 4px!important;
}

.ui.tabular.buttons .button.item:first-child {
    border-left: 1px solid rgba(255, 255, 255, 0.1);
}
